<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">


    <bean id="climateCPGBlotMonitor"
        class="com.raytheon.uf.edex.database.health.DatabaseBloatMonitor">
        <constructor-arg>
            <bean
                class="com.raytheon.uf.edex.database.health.PostgresBloatDao">
                <constructor-arg value="climate" />
            </bean>
        </constructor-arg>
        <constructor-arg ref="warningThresholds" />
        <constructor-arg ref="criticalThresholds" />
    </bean>

    <bean factory-bean="dbMonitorRegistry" factory-method="registerMonitor">
        <constructor-arg value="climateCPGBlotMonitor" />
        <constructor-arg ref="climateCPGBlotMonitor" />
    </bean>

    <bean id="climateCPGSessionPurger"
        class="gov.noaa.nws.ocp.edex.climate.prodgen.ClimateProdgenerateSessionPurger">
        <property name="retentionHours" value="72" />
    </bean>
    
    <bean id="climateSentRecordPurger"
        class="gov.noaa.nws.ocp.edex.climate.prodgen.SentClimateProductRecordPurger">
        <property name="retentionHours" value="168" />
    </bean>

    <camelContext id="cpg_purger-camel"
        xmlns="http://camel.apache.org/schema/spring" errorHandlerRef="errorHandler">

        <endpoint id="climateCPGPurgeCron"
            uri="clusteredquartz://cpg/cpgSessionPurger/?cron=${cpg.purger.cron}"/>
            
        <endpoint id="climateSendRecordPurgeCron"
            uri="clusteredquartz://cpg/sentRecordPurger/?cron=${record.purger.cron}" />

        <!-- purge CPG sessions table -->
        <route id="climateCPGPurge">
            <from uri="climateCPGPurgeCron" />
            <to uri="jms-generic:queue:climateCPGPurgeWork" />
        </route>

        <route id="climateCPGPurgeWork">
            <from uri="jms-generic:queue:climateCPGPurgeWork" />
            <doTry>
                <bean ref="climateCPGSessionPurger" method="purgeTerminatedCPGSession" />
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:cpgSessionPurger?level=ERROR" />
                </doCatch>
            </doTry>
        </route>
        
        <!-- purge sent_prod_record table -->
        <route id="climateSentRecordPurge">
            <from uri="climateSendRecordPurgeCron" />
            <to uri="jms-generic:queue:climateSentRecordPurgeWork" />
        </route>

        <route id="climateSentRecordPurgeWork">
            <from uri="jms-generic:queue:climateSentRecordPurgeWork" />
            <doTry>
                <bean ref="climateSentRecordPurger" method="purgeSentProductRecords" />
                <doCatch>
                    <exception>java.lang.Throwable</exception>
                    <to uri="log:cpgSessionPurger?level=ERROR" />
                </doCatch>
            </doTry>
        </route>

    </camelContext>
</beans>